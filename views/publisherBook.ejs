<%- include('partials/header', { title: 'Login', isLogin }) %>
    <h2>List of Books</h2>

    <table border="1" class="table table-hover">
        <thead class="table-dark">
            <tr>
                <td>Cover</td>
                <td>Judul</td>
                <td>Tahun Terbit</td>
                <td>Author</td>
                <td>Stock</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody class="table-primary">
            <% books.forEach(book => { %>
                <tr>
                    <td><img src="<%= book.cover %>" height="200"></td>
                    <td>
                        <a href="/books/<%= book.id %>">
                            <%= book.judul %>
                        </a>
                    </td>
                    <td><%= book.tahun_terbit %></td>
                    <td>
                        <% if (book.Author) { %>
                            <%= book.Author.name %>
                        <% } else { %>
                            Unknown
                        <% } %>
                    </td>
                    <td><%= book.stock %></td>
                    <td>
                        <a href="/books/<%= book.id %>/pinjam">Pinjam</a> |
                        <a href="/books/<%= book.id %>/edit">Edit</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<%- include('partials/footer') %>
